# Next.js App Configuration
NEXTAUTH_URL=https://localhost:3443
NEXTAUTH_SECRET=your-nextauth-secret-here

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/social-mm
# OR MongoDB Atlas
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/social-mm

# Instagram/Facebook API Configuration
FACEBOOK_CLIENT_ID=your-facebook-app-id
FACEBOOK_CLIENT_SECRET=your-facebook-app-secret
INSTAGRAM_ACCESS_TOKEN=your-instagram-access-token

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key

# Cloudflare R2 Storage Configuration
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
R2_BUCKET_NAME=social-mm-media
R2_PUBLIC_URL=https://your-custom-domain.com
# OR use the default R2 public URL
# R2_PUBLIC_URL=https://pub-your-bucket-id.r2.dev

# Upstash Redis/Queue Configuration
UPSTASH_REDIS_REST_URL=https://your-redis-url.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-redis-token

# Cron Job Security
CRON_SECRET=your-secure-cron-secret-for-cloudflare-worker

# Development Settings
NODE_ENV=development
